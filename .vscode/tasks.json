{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"],
        }
    },
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "R --quiet -e devtools::document() -e devtools::install()",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "Rscript tests/test.R",
            "group": "test"
        }
    ]
}